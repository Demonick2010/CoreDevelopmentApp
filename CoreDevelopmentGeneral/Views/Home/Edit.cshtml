@model CoreDevelopmentApp.Models.Models.RequestModel

@{
    ViewData["Title"] = "Edit";

    IEnumerable<SelectListItem> selecList;
    if (TempData["selectListdata"] != null)
    {
        selecList = TempData["selectListdata"] as IEnumerable<SelectListItem>;
    }
    else
    {
        selecList = null;
    }
}

<!-- Start Page Content -->
<!-- ============================================================== -->
<!-- Row -->
<div class="row">
    <!-- Column -->
    <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
            <div class="card-block">
                <form method="post" class="form-horizontal form-material">
                    <div class="form-group">
                        <label class="col-md-12">Full Name</label>
                        <div class="col-md-12">
                            <input type="text" asp-for="@Model.Name" value="@Model.Name" placeholder="Johnathan Doe" class="form-control form-control-line">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-12">Select Category</label>
                        <div class="col-sm-12">
                            <select class="form-control form-control-line" asp-for="@Model.ListItemId" asp-items="@selecList">
                                
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-12">Dead Line</label>
                        <div class="col-md-12">
                            <input type="date" asp-for="@Model.DeadLine" placeholder="01.01.1987" value="@Model.DeadLine.ToString("yyyy-MM-dd")" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Description</label>
                        <div class="col-md-12">
                            <textarea asp-for="@Model.Description"  class="form-control form-control-line">@Model.Description</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Email</label>
                        <div class="col-md-12">
                            <input type="email" asp-for="@Model.Email" value="@Model.Email" placeholder="johnathan@admin.com" class="form-control form-control-line">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Update Task</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>
<!-- Row -->
<!-- ============================================================== -->
<!-- End PAge Content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
